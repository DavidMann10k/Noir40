<% title "Connections" %>

<table>
  <tr>
    <th>Scene</th>
    <th>Connection</th>
    <th>Direction</th>
  </tr>
  <% for scenection in @scenections %>
    <tr>
      <td><%= scenection.scene_id %></td>
      <td><%= scenection.scenection_id %></td>
      <td><%= scenection.direction %></td>
      <td><%= link_to "Show", scenection %></td>
      <td><%= link_to "Edit", edit_scenection_path(scenection) %></td>
      <td><%= link_to "Destroy", scenection, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Connection", new_scenection_path %></p>
