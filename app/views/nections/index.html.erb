<% title "Nections" %>

<table>
  <tr>
    <th>Scene</th>
    <th>Adjacent</th>
    <th>Direstion</th>
  </tr>
  <% for nection in @nections %>
    <tr>
      <td><%= nection.scene.name if nection.scene.name? %></td>
      <td><%= nection.adjacent.name if nection.adjacent.name %></td>
      <td><%= nection.direction %></td>
      <td><%= link_to "Show", nection %></td>
      <td><%= link_to "Edit", edit_nection_path(nection) %></td>
      <td><%= link_to "Destroy", nection, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Nection", new_nection_path %></p>
