<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header><%= link_to "Frozen Foundation", root_path, :class => "title" %></header>
    <nav>
      <%= link_to "Sign in", new_user_session_path unless signed_in? %>
      <%= link_to "Sign up", new_user_registration_path unless signed_in? %>
      <%= link_to "Profile", user_path(current_user) if signed_in? %>
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete if signed_in? %>
      <% if signed_in? && current_user.admin? %>
         | <%= link_to "Scenes", scenes_path %> | 
        <%= link_to "Scene Objects", scene_objects_path %> | 
        <%= link_to "Nections", nections_path %>
      <% end %>
      <% yield :nav %>
    </nav>
    <div class="flash">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
    </div>
    <div class="content">
      <%= yield %>
    </div>
    <footer></footer>
  </body>
</html>
